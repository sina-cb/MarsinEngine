public interface Properties {

    /**
     * Time Steps Which Acts as DeltaT in Real World's Physics Formulations
     */
    public static final double timeStep = 1 / 10;

    /**
     * Engine Waits for engineWait MilliSeconds Then Render The Whole World Again
     */
    public static final int engineWait = 40;

    /**
     * If True Then The Objects Will Be Drawn as Wired Objects
     * if False The Objects Will Be Drawn with Filled Color
     */
    public static final boolean wired = true;

}
